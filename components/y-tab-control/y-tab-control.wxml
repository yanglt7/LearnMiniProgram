<!--components/y-tab-control/y-tab-control.wxml-->
<view class="tab-control">
  <block wx:for="{{titles}}" wx:key="index">
    <view class="tab-item {{currentIndex == index ? 'active' : ''}}"
          bindtap="handleClick"
          data-index="{{index}}">
      <text>{{item}}</text>
    </view>
  </block>
</view> 