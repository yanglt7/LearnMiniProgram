<!--components/y-tab-control/y-tab-control.wxml-->
<view class="tab-control">
  <block wx:for="{{titles}}" wx:key="index">
    <view class="tab-control-item {{index == currentIndex?'active' : ''}}"
          bindtap="itemClick"
          data-index="{{index}}">
      <text>{{item}}</text>
    </view>
  </block>
</view>